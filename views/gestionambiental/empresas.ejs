<div class="app-container">
  <!-- Sidebar Component -->
  <%- include('../components/sidebar', { 
    currentPage: '/gestionambiental/empresas', 
    pageTitle: 'Gestión de Empresas - Gestión Ambiental', 
    isAdmin: true
  }) %>

  <!-- Main Content -->
  <main class="main-content">
    <!-- Header Section -->
    <div class="content-header">
      <div class="d-flex justify-content-between align-items-start">
        <div>
          <h3>
            <i class="fas fa-building icon"></i>
            Gestión de Empresas
          </h3>
          <p class="text-muted mb-0 mt-2">Sistema de administración de empresas del área de gestión ambiental</p>
        </div>
        
        <div class="action-buttons">
          <button id="btnNuevaEmpresa" class="btn btn-primary-custom" data-toggle="modal" data-target="#modalEmpresa">
            <i class="fas fa-plus me-2"></i>
            Nueva Empresa
          </button>
        </div>
      </div>
    </div>

    <!-- Search and Filters Section -->
    <div class="filters-section">
      <div class="row g-3">
                 <!-- Búsqueda -->
         <div class="col-lg-6 col-md-6 col-sm-12">
           <label class="form-label">
             <i class="fas fa-search me-2"></i>Búsqueda
           </label>
             <input type="text" id="searchInput" class="form-control" placeholder="Buscar por código, razón social o RFC...">
         </div>
        
        <!-- Status -->
        <div class="col-lg-2 col-md-6 col-sm-6">
          <label class="form-label">
            <i class="fas fa-info-circle me-2"></i>Estatus
          </label>
          <select id="filterStatus" class="form-control">
            <option value="">Todos</option>
            <option value="1">Activo</option>
            <option value="0">Inactivo</option>
          </select>
        </div>
        
        <!-- Límite por página -->
        <div class="col-lg-2 col-md-6 col-sm-6">
          <label class="form-label">
            <i class="fas fa-list me-2"></i>Por página
          </label>
          <select id="limitSelect" class="form-control">
            <option value="10">10</option>
            <option value="25">25</option>
            <option value="50">50</option>
            <option value="100">100</option>
          </select>
        </div>
      </div>
      
      <!-- Botones de filtros -->
      <div class="d-flex justify-content-between align-items-center mt-3">
        <div class="d-flex gap-2">
          <button id="btnAplicarFiltros" class="btn btn-primary-custom btn-sm">
            <i class="fas fa-filter me-2"></i>Aplicar Filtros
          </button>
          <button id="btnLimpiarFiltros" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-times me-2"></i>Limpiar
          </button>
        </div>
        
        <!-- Ordenamiento -->
        <div class="d-flex align-items-center gap-3">
          <span class="text-muted small">Ordenar por:</span>
          <div class="btn-group btn-group-sm" role="group">
            <input type="radio" class="btn-check" name="ordenEmpresas" id="ordenNormal" value="normal" checked>
            <label class="btn btn-outline-primary" for="ordenNormal">Normal</label>
            
            <input type="radio" class="btn-check" name="ordenEmpresas" id="ordenReciente" value="reciente">
            <label class="btn btn-outline-primary" for="ordenReciente">Reciente</label>
            
            <input type="radio" class="btn-check" name="ordenEmpresas" id="ordenAntiguo" value="antiguo">
            <label class="btn btn-outline-primary" for="ordenAntiguo">Antiguo</label>
          </div>
        </div>
      </div>
    </div>

         <!-- Stats Cards -->
     <div class="row mb-3 g-2">
       <div class="col-lg-6 col-md-6 col-sm-12 col-12">
         <div class="stats-card">
           <div class="stats-icon bg-primary">
             <i class="fas fa-building"></i>
           </div>
           <div class="stats-info">
             <span class="stats-number" id="totalEmpresas">-</span>
             <span class="stats-label">Total</span>
           </div>
         </div>
       </div>
       <div class="col-lg-6 col-md-6 col-sm-12 col-12">
         <div class="stats-card">
           <div class="stats-icon bg-success">
             <i class="fas fa-check-circle"></i>
           </div>
           <div class="stats-info">
             <span class="stats-number" id="empresasActivas">-</span>
             <span class="stats-label">Activas</span>
           </div>
         </div>
       </div>
     </div>

    <!-- Table Section -->
    <div class="table-container">
      <!-- Loading indicator -->
      <div id="loadingIndicator" class="text-center py-4" style="display: none;">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden">Cargando...</span>
        </div>
        <p class="mt-2 text-muted">Cargando empresas...</p>
      </div>
      
      <!-- Table -->
      <div id="tableContent" style="display: none;">
        <div class="table-responsive">
          <table id="tablaEmpresas" class="table align-middle mb-0">
            <thead>
              <tr>
                <th class="text-center">Código</th>
                <th>Razón Social</th>
                <th class="text-center">RFC</th>
                <th class="text-center">Teléfono</th>
                <th class="text-center">Status</th>
                <th class="text-center">Acciones</th>
              </tr>
            </thead>                        
            <tbody>
              <!-- Los registros se cargarán dinámicamente aquí -->
            </tbody>
          </table>
        </div>
        
        <!-- Pagination -->
        <div class="d-flex justify-content-between align-items-center mt-3">
          <div class="d-flex align-items-center gap-2">
            <span class="text-muted small">Mostrando</span>
            <select id="limitSelect" class="form-select form-select-sm" style="width: auto;">
              <option value="10">10</option>
              <option value="25">25</option>
              <option value="50">50</option>
              <option value="100">100</option>
            </select>
            <span class="text-muted small">registros por página</span>
          </div>
          
          <nav aria-label="Paginación de empresas">
            <ul class="pagination pagination-sm mb-0" id="pagination">
              <!-- La paginación se generará dinámicamente -->
            </ul>
          </nav>
        </div>
      </div>
      
      <!-- No results message -->
      <div id="noResults" class="text-center py-5" style="display: none;">
        <i class="fas fa-search fa-3x text-muted mb-3"></i>
        <h5 class="text-muted">No se encontraron resultados</h5>
        <p class="text-muted">Intenta ajustar los filtros de búsqueda</p>
      </div>
    </div>
  </main>
