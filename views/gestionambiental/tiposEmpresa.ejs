%>

<div class="app-container">
  <%- include('../components/sidebar', { 
    currentPage: '/gestionambiental/tipos-empresa', 
    pageTitle: 'Tipos de Empresa - Gestión Ambiental', 
    isAdmin: true
  }) %>

  <main class="main-content">
    <div class="content-header">
      <div class="d-flex justify-content-between align-items-start">
        <div>
          <h3>
            <i class="fas fa-tags icon"></i>
            Catálogo: Tipos de Empresa
          </h3>
          <p class="text-muted mb-0 mt-2">Cree, edite o elimine los tipos disponibles para empresas</p>
        </div>
        <div class="action-buttons">
          <button id="btnNuevoTipo" class="btn btn-primary-custom">
            <i class="fas fa-plus me-2"></i> Nuevo Tipo
          </button>
        </div>
      </div>
    </div>

    <div class="table-container">
      <div class="table-responsive">
        <table class="table align-middle mb-0" id="tablaTipos">
          <thead>
            <tr>
              <th>#</th>
              <th>Nombre</th>
              <th>Estatus</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <!-- rows dynamically rendered -->
          </tbody>
        </table>
      </div>
    </div>
  </main>
</div>

<!-- Modal Crear/Editar -->
<div class="modal fade" id="modalTipo" tabindex="-1">
  <div class="modal-dialog">
    <form id="formTipo" class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Tipo de Empresa</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body row g-3">
        <input type="hidden" id="tipoId">
        <div class="col-12">
          <label class="form-label">Nombre</label>
          <input type="text" id="tipoNombre" class="form-control" required>
        </div>
        <div class="col-12">
          <label class="form-label">Estatus</label>
          <select id="tipoStatus" class="form-control">
            <option value="1">Activo</option>
            <option value="0">Inactivo</option>
          </select>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
      </div>
    </form>
  </div>
</div>

<script src="js/components/sidebar.js"></script>

<% extraScripts=` 
<script src="js/gestionambiental/tiposEmpresa.js"></script>
`; %>
