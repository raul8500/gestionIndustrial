<div class="app-container">
  <!-- Sidebar Component -->
  <%- include('../components/sidebar', { 
    currentPage: '/oficios', 
    pageTitle: 'Gestión de Oficios', 
    isAdmin: true
  }) %>

  <!-- Main Content -->
  <main class="main-content">
    <!-- Header Section -->
    <div class="content-header">
      <div class="d-flex justify-content-between align-items-start">
        <div>
          <h3>
            <i class="fas fa-paperclip icon"></i>
            Gestión de Oficios
          </h3>
          <p class="text-muted mb-0 mt-2">Sistema de registro y seguimiento de correspondencia oficial</p>
        </div>
        
        <div class="action-buttons">
          <button id="btnNuevoOficio" class="btn btn-primary-custom" data-toggle="modal" data-target="#modalOficio">
            <i class="fas fa-plus me-2"></i>
            Registrar Nuevo Oficio
          </button>
        </div>
      </div>
    </div>

    <!-- Search and Filters Section -->
    <div class="filters-section">
      <div class="row g-3">
        <!-- Búsqueda -->
        <div class="col-lg-2 col-md-6 col-sm-12">
          <label class="form-label">
            <i class="fas fa-search me-2"></i>Búsqueda
          </label>
          <input type="text" id="searchInput" class="form-control" style="font-size: 13px;" placeholder="Buscar por número, institución, asunto...">
        </div>
        
        <!-- Tipo de Correspondencia -->
        <div class="col-lg-2 col-md-3 col-sm-6">
          <label class="form-label">
            <i class="fas fa-filter me-2"></i>Tipo
          </label>
          <select id="filterTipo" class="form-control">
            <option value="">Todos</option>
            <option value="1">Interna</option>
            <option value="2">Externa</option>
          </select>
        </div>
        
        <!-- Status -->
        <div class="col-lg-2 col-md-3 col-sm-6">
          <label class="form-label">
            <i class="fas fa-info-circle me-2"></i>Estatus
          </label>
          <select id="filterStatus" class="form-control">
            <option value="">Todos</option>
            <option value="1">Pendiente</option>
            <option value="2">En proceso</option>
            <option value="3">Finalizado</option>
            <option value="4">En revisión</option>
          </select>
        </div>

        <!-- Área Turnada -->
        <div class="col-lg-2 col-md-4 col-sm-6">
          <label class="form-label">
            <i class="fas fa-building me-2"></i>Área turnada
          </label>
          <select id="filterDepartamento" class="form-control">
            <option value="">Todas</option>
            <option value="Recursos Financieros">Recursos Financieros</option>
            <option value="Recursos Humanos">Recursos Humanos</option>
            <option value="Recursos Materiales">Recursos Materiales</option>
            <option value="Tecnologias">Tecnologías</option>
            <option value="Archivo">Archivo</option>
            <option value="Unidad Administrativa">Unidad Administrativa</option>
          </select>
        </div>
        
        <!-- Fecha Desde -->
        <div class="col-lg-2 col-md-6 col-sm-6">
          <label class="form-label">
            <i class="fas fa-calendar me-2"></i>Desde
          </label>
          <input type="date" id="filterFechaDesde" class="form-control">
        </div>
        
        <!-- Fecha Hasta -->
        <div class="col-lg-2 col-md-6 col-sm-6">
          <label class="form-label">
            <i class="fas fa-calendar me-2"></i>Hasta
          </label>
          <input type="date" id="filterFechaHasta" class="form-control">
        </div>
      </div>
      
      <!-- Botones de filtros -->
      <div class="d-flex justify-content-between align-items-center mt-3">
        <div class="d-flex gap-2">
          <button id="btnAplicarFiltros" class="btn btn-primary-custom btn-sm">
            <i class="fas fa-filter me-2"></i>Aplicar Filtros
          </button>
          <button id="btnLimpiarFiltros" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-times me-2"></i>Limpiar
          </button>
          <button id="btnExportar" class="btn btn-success btn-sm">
            <i class="fas fa-file-excel me-2"></i>Exportar
          </button>
        </div>
        
        <!-- Ordenamiento -->
        <div class="d-flex align-items-center gap-3">
          <span class="text-muted small">Ordenar por:</span>
          <div class="btn-group btn-group-sm" role="group">
            <input type="radio" class="btn-check" name="ordenRegistros" id="ordenNormal" value="normal" checked>
            <label class="btn btn-outline-primary" for="ordenNormal">Normal</label>
            
            <input type="radio" class="btn-check" name="ordenRegistros" id="ordenReciente" value="reciente">
            <label class="btn btn-outline-primary" for="ordenReciente">Reciente</label>
            
            <input type="radio" class="btn-check" name="ordenRegistros" id="ordenAntiguo" value="antiguo">
            <label class="btn btn-outline-primary" for="ordenAntiguo">Antiguo</label>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-3 g-2">
      <div class="col-lg-2 col-md-4 col-sm-6 col-6">
        <div class="stats-card">
          <div class="stats-icon bg-primary">
            <i class="fas fa-file-alt"></i>
          </div>
          <div class="stats-info">
            <span class="stats-number" id="totalOficios">-</span>
            <span class="stats-label">Total</span>
          </div>
        </div>
      </div>
      <div class="col-lg-2 col-md-4 col-sm-6 col-6">
        <div class="stats-card">
          <div class="stats-icon bg-warning">
            <i class="fas fa-clock"></i>
          </div>
          <div class="stats-info">
            <span class="stats-number" id="pendientes">-</span>
            <span class="stats-label">Pendientes</span>
          </div>
        </div>
      </div>
      <div class="col-lg-2 col-md-4 col-sm-6 col-6">
        <div class="stats-card">
          <div class="stats-icon bg-info">
            <i class="fas fa-spinner"></i>
          </div>
          <div class="stats-info">
            <span class="stats-number" id="enProceso">-</span>
            <span class="stats-label">En Proceso</span>
          </div>
        </div>
      </div>
      <div class="col-lg-2 col-md-4 col-sm-6 col-6">
        <div class="stats-card">
          <div class="stats-icon bg-success">
            <i class="fas fa-check-circle"></i>
          </div>
          <div class="stats-info">
            <span class="stats-number" id="finalizados">-</span>
            <span class="stats-label">Finalizados</span>
          </div>
        </div>
      </div>
      <div class="col-lg-2 col-md-4 col-sm-6 col-6">
        <div class="stats-card">
          <div class="stats-icon bg-secondary">
            <i class="fas fa-building"></i>
          </div>
          <div class="stats-info">
            <span class="stats-number" id="internos">-</span>
            <span class="stats-label">Internos</span>
          </div>
        </div>
      </div>
      <div class="col-lg-2 col-md-4 col-sm-6 col-6">
        <div class="stats-card">
          <div class="stats-icon bg-dark">
            <i class="fas fa-external-link-alt"></i>
          </div>
          <div class="stats-info">
            <span class="stats-number" id="externos">-</span>
            <span class="stats-label">Externos</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Table Section -->
    <div class="table-container">
      <!-- Loading indicator -->
      <div id="loadingIndicator" class="text-center py-4" style="display: none;">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden">Cargando...</span>
        </div>
        <p class="mt-2 text-muted">Cargando oficios...</p>
      </div>
      
      <!-- Table -->
      <div id="tableContent" style="display: none;">
        <div class="table-responsive">
          <table id="tablaRegistros" class="table align-middle mb-0">
            <thead>
              <tr>
                <th class="text-center">No. Oficio</th>
                <th class="text-center">Fecha</th>
                <th class="text-center">Tipo</th>
                <th>Institución</th>
                <th>Asunto</th>
                <th class="text-center">Estatus</th>
                <th class="text-center">Acciones</th>
              </tr>
            </thead>                        
            <tbody>
              <!-- Los registros se cargarán dinámicamente aquí -->
            </tbody>
          </table>
        </div>
        
        <!-- Pagination -->
        <div class="d-flex justify-content-between align-items-center mt-3">
          <div class="d-flex align-items-center gap-2">
            <span class="text-muted small">Mostrando</span>
            <select id="limitSelect" class="form-select form-select-sm" style="width: auto;">
              <option value="10">10</option>
              <option value="25">25</option>
              <option value="50">50</option>
              <option value="100">100</option>
            </select>
            <span class="text-muted small">registros por página</span>
          </div>
          
          <nav aria-label="Paginación de oficios">
            <ul class="pagination pagination-sm mb-0" id="pagination">
              <!-- La paginación se generará dinámicamente -->
            </ul>
          </nav>
        </div>
      </div>
      
      <!-- No results message -->
