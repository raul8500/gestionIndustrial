<div class="app-container">
  <!-- Sidebar Component -->
  <%- include('../components/sidebar', { 
    currentPage: '/correspondenciaFinancieros', 
    pageTitle: 'Correspondencia Financieros', 
    isAdmin: true
  }) %>

  <!-- Main Content -->
  <main class="main-content">
    <!-- Header Section -->
    <div class="content-header">
      <div class="d-flex justify-content-between align-items-start">
        <div>
          <h3>
            <i class="fas fa-envelope icon"></i>
            Correspondencia Recursos Financieros
          </h3>
          <p class="text-muted mb-0 mt-2">Sistema de gesti칩n de correspondencia del 치rea financiera</p>
        </div>
        
        <div class="action-buttons">
          <button id="btnNuevo" class="btn btn-primary-custom">
            <i class="fa-solid fa-plus me-2"></i>
            Nueva Correspondencia
          </button>
        </div>
      </div>
    </div>

    <!-- Filters Section -->
    <div class="filters-section">
      <h6 class="mb-3"><i class="fas fa-sort me-2"></i> Ordenar registros:</h6>
      <div class="d-flex gap-4">
        <div class="form-check">
          <input class="form-check-input" type="radio" name="ordenRegistros" id="ordenNormal" value="normal" checked>
          <label class="form-check-label" for="ordenNormal">Normal</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="ordenRegistros" id="ordenReciente" value="reciente">
          <label class="form-check-label" for="ordenReciente">M치s reciente</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="ordenRegistros" id="ordenAntiguo" value="antiguo">
          <label class="form-check-label" for="ordenAntiguo">Menos reciente</label>
        </div>
      </div>
    </div>

    <!-- Table Section -->
    <div class="table-container">
      <div class="table-responsive">
        <table id="tablaCorrespondencia" class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>No. Oficio</th>
              <th>Fecha</th>
              <th>Remitente</th>
              <th>Asunto</th>
              <th>Estatus</th>
              <th>Turnado a</th>
              <th>Docs</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td colspan="8" class="text-center text-muted py-4">
                <i class="fas fa-spinner fa-spin loading-spinner me-2"></i>
                Cargando registros...
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </main>
</div>


<!-- Modal -->
<div class="modal fade" id="modalCorrespondencia" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <form id="formCorrespondencia" enctype="multipart/form-data" class="modal-content">
      <input type="hidden" id="idCorrespondencia" name="id">
      <div class="modal-header">
        <h5 class="modal-title">游늶 Datos de Correspondencia</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body row">
        <div class="form-group col-md-6">
          <label>No. de Oficio</label>
          <input type="text" class="form-control" id="numeroOficio" name="numeroOficio" required>
        </div>
        <div class="form-group col-md-6">
          <label>Fecha de Oficio</label>
          <input type="date" class="form-control" id="fechaOficio" name="fechaOficio">
        </div>
        <div class="form-group col-md-6">
          <label>Fecha de Recepci칩n</label>
          <input type="date" class="form-control" id="fechaRecepcion" name="fechaRecepcion">
        </div>
        <div class="form-group col-md-6">
          <label>Tipo de Correspondencia</label>
          <select class="form-control" id="tipoCorrespondencia" name="tipoCorrespondencia">
            <option value="1">Interna</option>
            <option value="2">Externa</option>
          </select>
        </div>
        <div class="form-group col-md-12">
          <label>Remitente</label>
          <input type="text" class="form-control" id="remitente" name="remitente">
        </div>
        <div class="form-group col-md-12">
          <label>Asunto</label>
          <textarea class="form-control" id="asunto" name="asunto" rows="2"></textarea>
        </div>
        <div class="form-group col-md-6">
          <label>Tipo de Respuesta</label>
          <input type="text" class="form-control" id="tipoRespuesta" name="tipoRespuesta">
        </div>
        <div class="form-group col-md-6">
          <label>Turnado a</label>
          <select class="form-control" id="turnadoA" name="turnadoA"></select>
        </div>
        <div class="form-group col-md-6">
          <label>Tiempo de Respuesta (d칤as)</label>
          <input type="number" class="form-control" id="tiempoRespuesta" name="tiempoRespuesta">
        </div>
        <div class="form-group col-md-6">
          <label>Status</label>
          <select class="form-control" id="status" name="status">
            <option value="1">Pendiente</option>
            <option value="2">Atendido</option>
          </select>
        </div>
        <div class="form-group col-md-12">
          <label>Observaciones</label>
          <textarea class="form-control" id="observaciones" name="observaciones"></textarea>
        </div>
        <div class="form-group col-md-12">
          <label>Archivos</label>
          <input type="file" class="form-control" id="archivos" name="archivos" multiple>
        </div>
      </div>
      <div class="form-group col-md-12" id="archivoActualContainer" style="display: none; margin-left: 20px;" >
        <label>Archivos actuales</label>
        <div id="listaArchivosActuales" class="d-flex flex-wrap gap-2 mt-2"></div>
      </div>

      <div class="modal-footer">
        <button class="btn btn-primary-custom" type="submit">Guardar</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
      </div>
    </form>
  </div>
</div>

