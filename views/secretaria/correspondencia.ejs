<div class="app-container">
  <!-- Sidebar Component -->
  <%- include('../components/sidebar', { 
    currentPage: '/correspondenciaSecretaria', 
    pageTitle: 'Correspondencia Secretar√≠a', 
    isAdmin: false
  }) %>

  <!-- Main Content -->
  <main class="main-content">
    <!-- Header Section -->
    <div class="content-header">
      <div class="d-flex justify-content-between align-items-start">
        <div>
          <h3>
            <i class="fas fa-envelope icon"></i>
            Registro de Correspondencia
          </h3>
          <p class="text-muted mb-0 mt-2">Sistema de gesti√≥n de correspondencia oficial de la secretar√≠a</p>
        </div>
        
        <div class="action-buttons">
          <button id="btnNuevoOficio" class="btn btn-primary-custom" data-bs-toggle="modal" data-bs-target="#modalCorrespondencia">
            <i class="fas fa-plus me-2"></i>
            Registrar Correspondencia
          </button>
        </div>
      </div>
    </div>

    <!-- Filters Section -->
    <div class="filters-section">
      <h6>
        <i class="fas fa-filter icon"></i>
        Filtros de B√∫squeda
      </h6>
      <div class="d-flex justify-content-center gap-3 my-3" id="filtroFolioTipo">
        <div class="form-check">
          <input class="form-check-input" type="radio" name="tipoFolio" id="folioTodos" value="todos" checked>
          <label class="form-check-label" for="folioTodos">Todos</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="tipoFolio" id="folioNumerico" value="numerico">
          <label class="form-check-label" for="folioNumerico">Solo num√©ricos</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="tipoFolio" id="folioTexto" value="texto">
          <label class="form-check-label" for="folioTexto">Solo letras</label>
        </div>
      </div>
    </div>

    <!-- Table Section -->
    <div class="table-container">
      <div class="tab-content" id="pills-tabContent2">
        <div class="table-responsive pt-3">
          <table id="tablaCorrespondencia" class="table align-middle mb-0 bg-white">
            <thead class="bg-light text-center">
              <tr>
                <th>Folio Oficial</th>
                <th>Fecha</th>
                <th>Fecha del Oficio</th>
                <th>No. de Oficio</th>
                <th>Remite</th>
                <th>Cargo / Dependencia</th>
                <th>Asunto</th>
                <th>Comentarios / Acuerdo Interno</th>
                <th>No. Tarjeta Turno</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <!-- Registros din√°micos -->
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</div>
            

    <!-- Modal -->
    <div class="modal fade" id="modalCorrespondencia" tabindex="-1" role="dialog"
        aria-labelledby="modalCorrespondenciaLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <form id="formCorrespondencia" enctype="multipart/form-data">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalCorrespondenciaLabel">Registrar nueva correspondencia</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body row g-3">
                        <div class="col-md-6">
                            <label>Folio Oficial</label>
                            <input type="text" name="folioOficial" class="form-control" autocomplete="off">
                        </div>
                        <div class="col-md-6">
                            <label>Fecha</label>
                            <input type="date" name="fechaRegistro" class="form-control" autocomplete="off">
                        </div>
                        <div class="col-md-6">
                            <label>Fecha del Oficio</label>
                            <input type="date" name="fechaOficio" class="form-control" autocomplete="off">
                        </div>
                        <div class="col-md-6">
                            <label>No. de Oficio</label>
                            <input type="text" name="numeroOficio" class="form-control" autocomplete="off">
                        </div>
                        <div class="col-md-6">
                            <label>Remite</label>
                            <input type="text" name="remite" class="form-control" autocomplete="off">
                        </div>
                        <div class="col-md-6">
                            <label>Cargo / Dependencia</label>
                            <input type="text" name="cargoDependencia" class="form-control" autocomplete="off">
                        </div>
                        <div class="col-md-12">
                            <label>Asunto</label>
                            <input type="text" name="asunto" class="form-control" autocomplete="off">
                        </div>
                        <div class="col-md-12">
                            <label>Acuerdo Interno / Comentarios</label>
                            <textarea name="comentarios" class="form-control" autocomplete="off" rows="2"></textarea>
                        </div>
                        <div class="col-md-6">
                            <label>No. de tarjeta con la que se turn√≥</label>
                            <input type="text" name="tarjetaTurno" class="form-control" autocomplete="off">
                        </div>

                        <div class="col-md-12">
                            <label>Archivos adjuntos</label>
                            <input type="file" name="archivos" class="form-control" multiple>

                            <!-- üîΩ Contenedor para archivos actuales editables -->
                            <div id="archivoActualContainer" class="mt-2" style="display: none;"
                                data-archivos-a-eliminar="[]">
                                <label>Archivos actuales:</label>
                                <div id="listaArchivosActuales" class="d-flex flex-wrap gap-2 mt-1"></div>
                            </div>
                        </div>

                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary-custom">Guardar</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>




